<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<!-- <link rel="stylesheet" href="/css/main.css"> -->
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>

<main>

    <div class="grid">

    <% for(var i=0; i<product_list.length; i++) {%>

        <article class="card product-item">
            <header class="card__header">
                <h1 class="product__title">
                    <%= product_list[i]['title'] %>
                </h1>
            </header>
            <div class="card__image">
                <img src=<%= product_list[i]['image'] %> height="150px" alt=<%= product_list[i]['title'] %>>
            </div>
            <div class="card__content">
                <h3 class="product__price">Price: <%= product_list[i]['price'] %>
                </h3>
                <h3 class="product__description">Quantity: <%= product_list[i]['quantity'] %>
                </h3>
            </div>
            <div class="card__actions">
                <form action="http://localhost:3000/cart" method="POST">
                    <button class="btn" type="submit">Add to Cart
                    </button>
                    <input type="hidden" name="product_id" value=<%= product_list[i]['id'] %>>
                </form>
            </div>
        </article>
    <% } %>

    </div>



</main>
<%- include('../includes/end.ejs') %>